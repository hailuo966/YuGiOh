<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark" >

    <TextView
        android:id="@+id/item_tv_deck_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_click_bg"
        android:padding="5dp"
        android:textColor="@android:color/background_light"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/layout_set_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_tv_deck_name"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/item_tv_deck_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_click_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="编辑"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item_tv_deck_rename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_click_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="改名"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item_tv_deck_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_click_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="删除"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>