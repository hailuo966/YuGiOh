<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ban_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:gravity="center"
        android:textColor="@android:color/background_light" />

    <ListView
        android:id="@+id/ban_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@null" >
    </ListView>

    <RadioGroup
        android:id="@+id/radioGroup_ban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radioButton_ban0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_ban_tag_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="禁止"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton_ban1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_ban_tag_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="限制"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton_ban2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_ban_tag_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="准限"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton_ban00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_ban_tag_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="观赏"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />
    </RadioGroup>

</LinearLayout>